extends ../layouts/main.pug

block variables
	-var title = "Frosted Glass";

block styles 
	link(rel="stylesheet", href="static/styles/frostedGlass.css")
	link(rel="stylesheet" href="static/styles/common.css")
	link(rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200")

block content 

	include ../modules/homeLink.pug

	.wrapper
		.content
			.player.frosted-background
				.album-cover 
				p.song-name Take On Me
				p.artist-name a-ha
				.song-scroll 
					span.current-time 1:45
					span.total-time 3:14
				.buttons 
					.material-symbols-outlined skip_previous
					.material-symbols-outlined play_arrow
					.material-symbols-outlined skip_next